# Remnawave Ultimate Installer Configuration
# Copy this file to .env and configure

# =============================================================================
# BASIC SETTINGS
# =============================================================================

# Installation type: panel, node, all-in-one, selfsteal
INSTALL_TYPE="panel"

# Reverse proxy: nginx, caddy
REVERSE_PROXY="caddy"

# Security level: basic, cookie-auth, full-auth
SECURITY_LEVEL="basic"

# =============================================================================
# DOMAIN & SSL
# =============================================================================

# Your domain name
DOMAIN="example.com"

# SSL provider: letsencrypt, cloudflare, certwarden, self-signed
SSL_PROVIDER="letsencrypt"

# Cloudflare API (if using cloudflare SSL)
CLOUDFLARE_EMAIL=""
CLOUDFLARE_API_KEY=""

# =============================================================================
# PANEL CONFIGURATION
# =============================================================================

# Panel port (internal)
PANEL_PORT="3000"

# Database configuration
DB_PASSWORD=""
DB_NAME="remnawave"
DB_USER="remnawave"

# Redis/Valkey configuration
REDIS_PASSWORD=""

# Admin credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD=""

# JWT Secret
JWT_SECRET=""

# =============================================================================
# NODE CONFIGURATION
# =============================================================================

# Node API key
NODE_SECRET_KEY=""

# Node port
NODE_PORT="8000"

# Xray-core integration
INSTALL_XRAY="true"
XRAY_PORT="443"

# Selfsteal configuration
SELFSTEAL_DOMAIN="cloudflare.com"
SELFSTEAL_PORT="9443"

# =============================================================================
# INTEGRATIONS
# =============================================================================

# WARP integration
ENABLE_WARP="false"

# Monitoring (Beszel)
ENABLE_BESZEL="false"
BESZEL_HUB=""
BESZEL_KEY=""

# Grafana monitoring
ENABLE_GRAFANA="false"
GRAFANA_PASSWORD=""

# Prometheus metrics
ENABLE_PROMETHEUS="false"

# Netbird VPN
ENABLE_NETBIRD="false"
NETBIRD_SETUP_KEY=""

# =============================================================================
# BACKUP & NOTIFICATIONS
# =============================================================================

# Telegram notifications
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# Backup schedule (cron format)
BACKUP_SCHEDULE="0 3 * * *"

# Backup retention (days)
BACKUP_RETENTION="7"

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Language: en, ru
LANGUAGE="ru"

# Auto-update
AUTO_UPDATE_CHECK="true"

# Debug mode
DEBUG="false"

# Log level: error, warn, info, debug
LOG_LEVEL="info"

# Container restart policy
RESTART_POLICY="unless-stopped"
